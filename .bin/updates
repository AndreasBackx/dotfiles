#!/usr/bin/env zsh

set -e

source ~/.bin/utils.zsh

function check_cache() {
    if is_fedora; then
        amount=`dnf check-update --cacheonly --quiet --disablerepo="cpe-yum*" | wc -l`
    else
        amount=`paru -Qu | wc -l`
    fi

    # Return as fast as possible, then update the repos and update.
    if is_wayland; then
        waybar-json "$amount"
    else
        echo "$amount"
    fi
}

function check_live() {
    if is_fedora; then
        amount=`dnf check-update --refresh --quiet --disablerepo="cpe-yum*" | wc -l || echo "-1"`
    else
        amount=`paru -Syy &> /dev/null; paru -Qu | wc -l || echo "-1"`
    fi

    if [[ "$amount" == "-1" ]]; then
        return
    fi

    if is_wayland; then
        waybar-json "$amount"
    else
        echo "$amount"
    fi
}

case "$1" in
    check)
        check_cache
        check_live
        ;;
    monitor)
        check_cache
        while true; do
            check_live
            sleep 60
        done
        ;;
    update)
        if is_fedora; then
            sudo dnf upgrade --refresh --assumeyes
        else
            paru -Syu --noconfirm
        fi
        flatpak update
        sudo snap refresh
        ;;
    *)
        echo "Usage: $0 {check|monitor|update}"
        exit 2
esac

exit 0
