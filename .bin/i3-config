#!/usr/bin/env zsh

source ~/.config/.variables

echo "# this file is autogenerated by ~/.bin/i3-config" > ~/.config/i3/config
echo "" >> ~/.config/i3/config
echo "set \$MONITOR_LEFT \"$MONITOR_LEFT\"" >> ~/.config/i3/config
echo "set \$MONITOR_CENTER \"$MONITOR_CENTER\"" >> ~/.config/i3/config
echo "set \$MONITOR_RIGHT \"$MONITOR_RIGHT\"" >> ~/.config/i3/config
echo ""

cat ~/.config/sway/base >> ~/.config/i3/config
cat ~/.config/i3/include >> ~/.config/i3/config
