# Disable kitty/terminal shadow.
windowrule {
	name = noshadow-kitty
	match:class = ^(kitty)$

	no_shadow = on
}

# Floats for small utility apps
windowrule {
	name = Float
	match:class = ^(1password)|(com.adamcake.Bolt)$

	float = on
}

windowrule {
	name = 1password-quickaccess
	match:title = ^(Quick Access — 1Password)$

	stay_focused = on
	dim_around = on
}
windowrule {
	name = kitty-noshadow
	match:class = ^(kitty)$

	no_shadow = on
}

