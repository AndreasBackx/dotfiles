
# Disable kitty/terminal shadow.
windowrule {
	name = noshadow-kitty
	match:class = ^(kitty)$

	no_shadow = on
}

# 1Password Always Float
windowrule {
	name = float-1password
	match:class = ^(1password)$

	float = on
}
windowrule {
	name = 1password-quickaccess-stayfocused
	match:title = ^(Quick Access — 1Password)$

	stay_focused = on
}
windowrule {
	name = 1password-quickaccess-dim
	match:title = ^(Quick Access — 1Password)$

	dim_around = on
}

# Bolt Always Float
windowrule {
	name = float-bolt
	match:class = ^(com.adamcake.Bolt)$

	float = on
}

# RuneLite Launcher / HDOS Launcher
windowrule {
	name = runelite-launcher-float
	match:title = ^(RuneLite\sLauncher)|(HDOS)$

	float = on
}
windowrule {
	name = runelite-launcher-center
	match:title = ^(RuneLite\sLauncher)|(HDOS)$

	center = on
}
windowrule {
	name = runelite-launcher-pin
	match:title = ^(RuneLite\sLauncher)|(HDOS)$

	pin = on
}
