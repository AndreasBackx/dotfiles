# 1Password menu windows
# All Zoom Windows to be floating except for the meeting one which has the title meeting.
windowrule {
	name = zoom-float
	match:class = ^(Zoom.*)$

	float = on
}
#windowrule {
#  name = zoom-menu-stayfocused
#  match:title = ^(menu window)$
#  match:class = ^(Zoom.*)$
#
#  stay_focused = on
#}
windowrule {
	name = zoom-move-to-cursor
	match:class = ^(Zoom.*)$

	move = (cursor_x-10) (cursor_y-10)
}
windowrule {
	name = zoom-menu-size
	match:title = ^(menu window)$
	match:class = ^(Zoom.*)$

	size = 300 201
}

windowrule {
	name = gtk-prompt-float
	match:class = ^(Gtk_prompt\.py)$

	float = on
}
windowrule {
	name = updates-float
	match:class = ^(updates)$

	float = on
}

# Picture in Picture
windowrule {
	name = picture-in-picture-float
	match:title = ^(Picture-in-Picture)$

	float = on
}
windowrule {
	name = picture-in-picture-keep-aspect
	match:float = true
	match:title = ^(Picture-in-Picture)$

	keep_aspect_ratio = on
}
windowrule {
	name = picture-in-picture-size
	match:float = true
	match:title = ^(Picture-in-Picture)$

	size = 800 450
}
windowrule {
	name = picture-in-picture-opacity
	match:pin = true

	opacity = 0.10 1.0
}

