# exit i3
bindsym $mod+Shift+c exec notify-send "Restarting i3..." --urgency=low --expire-time=2500 && i3-config && i3-msg restart
bindsym $mod+Shift+e exec i3-nagbar \
    -t warning -m 'What would you like to do?' \
    -B 'Suspend' 'systemctl suspend' \
    -B 'Restart' 'systemctl reboot' \
    -B 'Shutdown' 'systemctl poweroff' \
    -B 'Logout' 'i3-msg exit'

