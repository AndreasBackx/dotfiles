### Output configuration

exec_always xrandr --output DP-4.8 --mode 2560x1440 --pos $MONITOR_LEFT_Xx$MONITOR_LEFT_Y --rotate left \
    --output USB-C-0 --mode 2560x1440 --pos $MONITOR_CENTER_Xx$MONITOR_CENTER_Y --rotate normal --refresh 144.006 --primary \
    --output HDMI-0 --mode 2560x1440 --pos $MONITOR_RIGHT_Xx$MONITOR_RIGHT_Y --rotate right \
    && cp ~/.config/monitors.xml /var/lib/gdm/.config/

exec_always --no-startup-id start-pulseaudio-x11
exec_always custom-polybar
exec /usr/libexec/gsd-xsettings

exec nm-applet
exec_always nitrogen --restore
exec picom
exec workchat
new_window pixel

