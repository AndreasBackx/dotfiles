# Bug see https://github.com/i3/i3/issues/2060
for_window [class="Spotify"] move to workspace $workspace11
assign [class="Thunderbird"] $workspace8

# Startup applications
exec_always zsh ~/.screenlayout/default.sh
exec_always feh --bg-fill ~/.config/wallpapers/Jaime\ Lannister\ -\ Field\ of\ Fire.jpg --bg-fill ~/.config/wallpapers/portrait.png
