;=====================================================
; CONFIGURATION
;=====================================================

[config]
; button click background
black = #141414
; background
black-grey = #1C1C1C
; lighter background
darker-grey = #242424
; highlight line
dark-grey = #404040
; gutter foreground
grey = #6E6E6E
; foreground
light-grey = #CECECE

yellow = #CCC47A
yellow-transparent = #CCCCC47A
pink = #E52E71
pink-transparent = #CCE52E71
green = #9CCC3D
green-transparent = #CC9CCC3D
blue = #6CC7D9
blue-transparent = #CC6CC7D9
orange = #D9882B
orange-transparent = #CCD9882B
purple = #A082D9
purple-transparent = #CCA082D9

background = ${self.darker-grey}
background-transparent = #CC1C1C1C
foreground = ${self.light-grey}
foreground-inactive = ${self.grey}

padding = 1
line-height = 2

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

; vim:ft=dosini

;=====================================================
; BARS
;=====================================================

[bar/center]
monitor = ${env:MONITOR:HDMI-1}
bottom = true
width = 100%
height = 40
radius = 0
fixed-center = true

background = ${config.background}

foreground = ${config.foreground}

underline-size = ${config.line-height}
underline-color = ${config.foreground}

padding-left = 0
; Padding for tray.
padding-right = 2

module-margin-left = 1
module-margin-right = 1

# font-0 = Roboto Regular:pixelsize=10;3
font-0 = xos4 Terminus:antialias=false:pixelsize=14;2
font-1 = Material Icons:pixelsize=11;3
font-2 = FontAwesome:pixelsize=11;3

modules-left = i3 xwindow
modules-center = spotify
modules-right = check-backup shairport headphones movie brightness-left volume updates memory cpu date powermenu

tray-position = right
tray-padding = ${config.padding}
tray-background = ${config.background}

scroll-up = i3wm-wsprev
scroll-down = i3wm-wsnext

enable-ipc = true

[bar/right]
inherit = bar/center
tray-position = none

modules-left = i3 xwindow
modules-center =
modules-right = check-backup shairport headphones brightness-right volume memory cpu date

[bar/left]
inherit = bar/center
tray-position = none

modules-left = i3 xwindow
modules-center =
modules-right = check-backup shairport headphones brightness-right volume memory cpu date

;=====================================================
; LEFT
;=====================================================

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
enable-scroll = false
fuzzy-match = false

# ws-icon-0 = "10;10"
# ws-icon-1 = "1;1"
# ws-icon-2 = "2;2"
# ws-icon-3 = "3;3"
# ws-icon-4 = "4;4"
# ws-icon-5 = "5;5"
# ws-icon-6 = "6;6"
# ws-icon-7 = "7;7"
# ws-icon-8 = "8;8"
# ws-icon-9 = "9;9"

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = ${config.padding}
label-mode-foreground = ${config.foreground}
# label-mode-background = ${config.background}

; focused = Active workspace on focused monitor
label-focused = %index%
# label-focused-background = ${config.background}
label-focused-underline = ${config.foreground}
label-focused-overline = ${config.foreground}
label-focused-padding = ${config.padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = ${config.padding}

; visible = Active workspace on unfocused monitor
label-visible = %index%
# label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-overline = ${self.label-focused-underline}
label-visible-padding = ${config.padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${config.pink-transparent}
label-urgent-padding = ${config.padding}

[module/xwindow]
type = internal/xwindow
label = "%title:0:80:...%   "
label-foreground = ${config.foreground-inactive}
# label-background = ${config.background}

;=====================================================
; CENTRE
;=====================================================

[module/spotify]
type = custom/script
exec = spotifycl status
tail = true
format-foreground = ${config.foreground-inactive}

click-right = xte 'key XF86AudioPlay'
click-left = xte 'key XF86AudioPlay'
click-middle = "source ~/.secrets; spotifycl save_remove"
scroll-up = xte 'key XF86AudioNext'
scroll-down = xte 'key XF86AudioPrev'


