;=====================================================
; RIGHT
;=====================================================

[module/movie]
type = custom/ipc
hook-0 = sudo ~/.bin/monitors movie --get
initial = 1
click-left = sudo ~/.bin/monitors movie --toggle; polybar-msg -p %pid% hook movie 1
label = %output%

[module/check-backup]
type = custom/script
interval = 60
exec = check-backup status
click-left = sudo check-backup activate

[module/updates]
type = custom/script
interval = 900
exec = "yay -Pu | wc -l; yay -Syy > /dev/null; yay -Pu | wc -l"
click-left = termite -e "zsh -c 'yay -Syu; zsh'" &
label = %output%
tail = true

format-prefix = " "
format-prefix-foreground = ${config.foreground-inactive}

[module/shairport]
type = custom/script
interval = 5

exec = shairport-simple status
click-left = shairport-simple toggle

[module/headphones]
type = custom/script
interval = 5

; Define the command to be executed when the hook is triggered
; Available tokens:
;   %pid% (id of the parent polybar process)
exec = headphones status
click-left = headphones toggle
scroll-up = headphones noise-cancellation high
click-middle = headphones noise-cancellation low
scroll-down = headphones noise-cancellation off

[module/delijn]
type = custom/script
interval = 60
exec = delijn
format-prefix = " "
format-prefix-foreground = ${config.foreground-inactive}

[module/mobile-vikings]
type = custom/script
interval = 3600
exec = mobile-vikings
format-prefix = " "
format-prefix-foreground = ${config.foreground-inactive}

[module/brightness-right]
type = custom/ipc

; Define the command to be executed when the hook is triggered
; Available tokens:
;   %pid% (id of the parent polybar process)
hook-0 = sudo ~/.bin/monitors brightness --display right 2> /dev/null
click-left = xte 'key XF86Display' &
format-prefix = " "
format-prefix-foreground = ${config.foreground-inactive}
scroll-up = xte 'key XF86MonBrightnessUp' &
scroll-down = xte 'key XF86MonBrightnessDown' &

; Hook to execute on launch. The index is 1-based.
; Default: 0
initial = 1

[module/brightness-left]
type = custom/ipc

; Define the command to be executed when the hook is triggered
; Available tokens:
;   %pid% (id of the parent polybar process)
hook-0 = sudo ~/.bin/monitors brightness --display left 2> /dev/null
click-left = xte 'key XF86Display' &
format-prefix = " "
format-prefix-foreground = ${config.foreground-inactive}
scroll-up = xte 'key XF86MonBrightnessUp' &
scroll-down = xte 'key XF86MonBrightnessDown' &

; Hook to execute on launch. The index is 1-based.
; Default: 0
initial = 1

[module/volume]
type = custom/ipc

; Define the command to be executed when the hook is triggered
; Available tokens:
;   %pid% (id of the parent polybar process)
hook-0 = pavolume
click-right = exec pavucontrol
click-left = xte 'key XF86AudioMute'
scroll-up = xte 'key XF86AudioRaiseVolume'
scroll-down = xte 'key XF86AudioLowerVolume'

; Hook to execute on launch. The index is 1-based.
; Default: 0
initial = 1

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${config.foreground-inactive}
label = %percentage_used%%

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${config.foreground-inactive}
format-underline =
label = %percentage%%

[module/eth]
type = internal/network
interface = eth0
interval = 5

label-background = ${config.foreground}
label-connected = "%{F#6E6E6E}%{F-} %local_ip%"

label-disconnected = "%{F#6E6E6E}%{F-} Disconnected"
format-disconnected = <label-disconnected>

[module/date]
type = internal/date
interval = 5

date = "%a %d %B"
date-alt = "%a %d %B"

time = %H:%M
time-alt = %H:%M

label = %date% %time%

format-prefix = " "
format-prefix-foreground = ${config.foreground-inactive}

[module/powermenu]
type = custom/menu

expand-right = true

label-open = ""
label-close = " "
label-separator =
label-separator-foreground = ${config.foreground-inactive}

format-foreground = ${config.foreground}

menu-0-0 = "  "
menu-0-0-exec = sudo poweroff
menu-0-1 = "  "
menu-0-1-exec = sudo reboot
menu-0-2 = "  "
menu-0-2-exec = lock hibernate
menu-0-3 = " "
menu-0-3-exec = lock

;=====================================================
; OTHER/UNUSED
