    output "@MONITOR_WORK_CENTER" position 1661,465 mode 3440x1440@143.923Hz
    output "@MONITOR_WORK_RIGHT" position 5101,227 transform 270
}

profile "Work Laptop Only" {
    output "@MONITOR_WORK_LAPTOP" enable mode 1920x1080
}

